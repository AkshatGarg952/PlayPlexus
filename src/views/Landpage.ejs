    <!-- Registration Player Form Modal -->

    <div class="auth-form-modal" id="registerPlayerModal">
        <button class="modal-close"><i class="fas fa-times"></i></button>
        <h2 class="auth-modal-title">Register as Player</h2>
      
        <form class="auth-form" id="playerRegisterForm" action="/api/users/register" method="POST" enctype="multipart/form-data">
          
          <div class="form-group">
    <label for="profileImage">Profile Image</label>
    <div class="image-preview" id="playerProfileImagePreview">
        <i class="fas fa-user-circle"></i>
    </div>
    <input type="file" id="profileImage" name="profileImage" class="form-input file-input" accept="image/*">
    <label for="profileImage"><i class="fas fa-upload"></i> Choose image</label>
</div>
      
          
          <div class="form-group">
            <label for="name">Full Name *</label>
            <input type="text" id="name" name="name" class="form-input" required minlength="3" maxlength="50">
          </div>
      
          
          <div class="form-group">
            <label for="username">Username *</label>
            <input type="text" id="username" name="username" class="form-input" required minlength="3" maxlength="50">
          </div>
      
          
          <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" id="email" name="email" class="form-input" required pattern="^\S+@\S+\.\S+$">
          </div>
      
          
          <div class="form-group">
            <label for="location">Location *</label>
            <input type="text" id="location" name="location" class="form-input" required minlength="3" maxlength="50">
          </div>
      
          
          <div class="form-group">
            <label for="phone">Phone *</label>
            <input type="tel" id="phone" name="phone" class="form-input" required>
          </div>
      
          
          <div class="form-group">
            <label for="bio">Bio</label>
            <textarea id="bio" name="bio" class="form-input" placeholder="Tell us about yourself"></textarea>
          </div>
      
          
          <div class="form-group">
            <label for="sports">Sports</label>
            <input type="text" id="sports" name="sports" class="form-input" placeholder="e.g., football, basketball">
            <small class="form-hint">Separate with commas</small>
          </div>


          
          <div class="form-group">
            <label for="onlineGames">Online Games</label>
            <input type="text" id="onlineGames" name="onlineGames" class="form-input" placeholder="e.g., BGMI, Valorant">
            <small class="form-hint">Separate with commas</small>
          </div>
      
          <input type="hidden" name="onlineGamesJSON" id="onlineGamesJSON">
      
          
          <div class="form-group">
            <label for="password">Password *</label>
            <input type="password" id="password" name="password" class="form-input" required minlength="6">
          </div>
      
          <button type="submit" class="form-submit">Register</button>
        </form>
      
        <div class="auth-footer">
          Already have an account? <a href="#" class="switch-to-login">Login here</a>
        </div>
      </div>
      
      

